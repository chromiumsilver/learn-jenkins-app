pipeline {
    agent any

    stages {
        stage('Build Docker Images') {
            parallel {
                stage('Build my-playwright') {
                    steps {
                        sh 'docker build -f ci/Dockerfile-playwright -t my-playwright .'
                    }
                }
                stage('Build my-aws-cli') {
                    steps {   
                        sh 'docker build -f ci/Dockerfile-aws-cli -t my-aws-cli .'
                    }
                }
            }
        }
    }
}